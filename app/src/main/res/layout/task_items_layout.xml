<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for each item in the recycler tasks items. -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="@dimen/task_items_dimen"
        android:layout_height="@dimen/task_items_dimen"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTask"
            android:layout_width="@dimen/image_view_dimen"
            android:layout_height="@dimen/image_view_dimen"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/image_view_margin_top"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/task_text"
            android:textColor="@color/purple_500" />
    </LinearLayout>

</androidx.cardview.widget.CardView>